      <uRwell Cathode_Kapton_th="0.05*mm" Cathode_DLC_th="0.0001*mm" Drift_Gas_th="3.*mm" PCB_DLC1_th="0.0001*mm" PCB_Well_Kapton_th="0.05*mm" PCB_DLC2_th=" 0.0001*mm" PCB_Epoxy1_th="0.01*mm" PCB_Prepreg_th="0.05*mm" PCB_Kapton1_th="0.012*mm" PCB_topEpoxy_th="0.007*mm" PCB_Kapton2_th="0.025*mm" PCB_mediumEpoxy_th="0.007*mm" PCB_Kapton3_th="0.2*mm"

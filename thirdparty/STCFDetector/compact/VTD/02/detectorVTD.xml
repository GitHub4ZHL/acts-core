  <info name="STCF"
    title="STCF"
    author="Zhou Hang"
    url="www.ustc.edu.cn"
    status="development"
    version="$Id: $">
    <comment>
      The compact format for the STCF
    </comment>
  </info>

  <includes>
    <gdmlFile ref="../../material/elements.xml"/>
    <gdmlFile ref="../../material/materials.xml"/>
  </includes>

  <define>
    <constant name="world_side"          value="10*m"/>
    <constant name="world_x"             value="world_side/2"/>
    <constant name="world_y"             value="world_side/2"/>
    <constant name="world_z"             value="world_side/2"/>

    <constant name="BField_nominal" value="1.0*tesla"/>
    <constant name="Cathode_Kapton_th" value="0.05*mm"/>
    <constant name="Cathode_DLC_th" value="0.0001*mm"/>
    <constant name="Drift_Gas_th" value="3.*mm"/>
    <constant name="PCB_DLC1_th" value="0.0001*mm"/>
    <constant name="PCB_Well_Kapton_th" value="0.05*mm"/>
    <constant name="PCB_DLC2_th" value=" 0.0001*mm"/>
    <constant name="PCB_Epoxy1_th" value="0.01*mm"/>
    <constant name="PCB_Prepreg_th" value="0.05*mm"/>
    <constant name="PCB_Kapton1_th" value="0.012*mm"/>
    <constant name="PCB_topEpoxy_th" value="0.007*mm"/>
    <constant name="PCB_Kapton2_th" value="0.025*mm"/>
    <constant name="PCB_mediumEpoxy_th" value="0.007*mm"/>
    <constant name="PCB_Kapton3_th" value="0.2*mm"/>

    <constant name="Strip_th" value="0.005*mm"/>
    <constant name="topStrip_wid" value="0.06*mm"/>
    <constant name="mediumStrip_wid" value="0.35*mm"/>
    <constant name="glue_th" value="0.001*mm"/>

  </define>

  <materials>
  </materials>

  <limits>
  </limits>

  <display>
    <vis name="KaptonVis"   alpha="1.0" r="0.1" g="0.1"  b="0.1"   showDaughters="true"  visible="true"/>
    <vis name="DLCVis" alpha="1.0" r="1.0" g="0.4" b="0.2"  showDaughters="true"  visible="true"/>
    <vis name="gasVis" alpha="1.0" r="0.2" g="0.4" b="0.2"  showDaughters="true"  visible="false"/>
    <vis name="EpoxyVis" alpha="1.0" r="0.2" g="0.4" b="0.2"  showDaughters="true"  visible="true"/>
    <vis name="StripVis" alpha="1.0" r="1" g="0.5" b="0.3"  showDaughters="true"  visible="true"/>
    <vis name="PrepregVis" alpha="1.0" r="0.5" g="0.4" b="0."  showDaughters="true"  visible="true"/>
     <vis name="InnerVis" alpha="1.0" r="0.2" g="0.8" b="0.4"  showDaughters="true"  visible="true"/>
  </display>



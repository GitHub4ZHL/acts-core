    </layer>
     <inWall rmin="48*mm"  thickness="1*mm" halfz="134.75*mm" material="CarbonFiber">
    </inWall>
    <endcap rmin="48*mm" rmax="165*mm"  thickness="1*mm" halfz="160.875*mm" zpos="295.625*mm" material="Al">
    </endcap>
  
  </detector>
</detectors>
<readouts>
    <readout name="InnerCollection">
      <id>system:5,side:2,layer:4,module:8,sensor:4</id>

  <materials>
    <material name="Air" state="gas">
      <D unit="g/cm3" value="0.00120479"/>
      <fraction n="1" ref="G4_AIR"/>
      <property name="RINDEX" ref="RINDEX_Air"/>
    </material>
    <material name="Al" state="solid">
      <D unit="g/cm3" value="2.699"/>
      <fraction n="1" ref="G4_Al"/>
    </material>
    <material name="Cathode" state="solid">
      <D value="2.2" unit="g/cm3"/>
      <composite n="1" ref="Si"/>
    </material>
    <material name="PhotonDet" state="solid">
      <D value="2.2" unit="g/cm3"/>
      <composite n="1" ref="Si"/>
    </material>
    <material name="quartz" state="solid">
      <D value="2.2" unit="g/cm3"/>
      <composite n="1" ref="Si"/>
      <composite n="2" ref="O"/>
      <property name="RINDEX" ref="RINDEX_Quartz"/>
      <property name="ABSLENGTH" ref="ABSLENGTH_Quartz"/>
    </material>
  </materials>

  <limits>
  </limits>

  <display>
    <vis name="DircVis" alpha="0.5" r="0.8" g="0.8" b="0.8" drawingStyle="solid" showDaughters="ture" visible="false"/>
    <vis name="DircShieldVis" alpha="0.5" r="0.7" g="0.7" b="0.7" drawingStyle="solid" showDaughters="true" visible="ture"/>
    <vis name="DircCoatingVis" alpha="0.5" r="0.1" g="0.1" b="0.1" drawingStyle="solid" showDaughters="true" visible="ture"/>
    <vis name="DircQuartzVis" alpha="0.9" r="0.0" g="0.0" b="0.8" drawingStyle="solid" showDaughters="true" visible="ture"/>
    <vis name="DircPhotonDetVis" alpha="0.5" r="0.0" g="0.7" b="0.0" drawingStyle="solid" showDaughters="true" visible="ture"/>
    <vis name="DircCathodeVis" alpha="0.5" r="0.9" g="0.1" b="0.0" drawingStyle="solid" showDaughters="true" visible="true"/>
  </display>

  <surfaces>
    <opticalsurface name="QuartzAirSurface" finish="ground" model="unified" type="dielectric_dielectric" value="0.1*deg">
      <property name="REFLECTIVITY" ref="REFLECTIVITY_QuartzAir"/>
      <property name="SPECULARLOBECONSTANT" coldim="2" values="0.4*eV 1.0 6.02*eV 1.0"/>
      <property name="SPECULARSPIKECONSTANT" coldim="2" values="0.4*eV 0.0 6.02*eV 0.0"/>
      <property name="BACKSCATTERCONSTANT" coldim="2" values="0.4*eV 0.0 6.02*eV 0.0"/>
    </opticalsurface>
    <opticalsurface name="QuartzCoatingFocusSurface" finish="polished" model="unified" type="dielectric_metal">
      <property name="REFLECTIVITY" ref="REFLECTIVITY_QuartzCoatingMirror"/>
    </opticalsurface>
    <opticalsurface name="QuartzCoatingTopSurface" finish="polished" model="unified" type="dielectric_metal">
      <property name="REFLECTIVITY" coldim="2" values="0.4*eV 0 6.02*eV 0"/>
    </opticalsurface>
    <opticalsurface name="QuartzCoatingBottomSurface" finish="polished" model="unified" type="dielectric_metal">
      <property name="REFLECTIVITY" coldim="2" values="0.4*eV 0 6.02*eV 0"/>
    </opticalsurface>
    <opticalsurface name="QuartzCoatingSideQSurface" finish="polished" model="unified" type="dielectric_metal">
      <property name="REFLECTIVITY" coldim="2" values="0.4*eV 0 6.02*eV 0"/>
    </opticalsurface>
    <opticalsurface name="QuartzCoatingSideFSurface" finish="polished" model="unified" type="dielectric_metal">
      <property name="REFLECTIVITY" coldim="2" values="0.4*eV 0 6.02*eV 0"/>
    </opticalsurface>
    <opticalsurface name="QuartzCathodeSurface" finish="polished" model="unified" type="dielectric_metal">
      <property name="REFLECTIVITY" coldim="2" values="0.4*eV 0 6.02*eV 0"/>
      <property name="EFFICIENCY" ref="EFFICIENCY_Cathode"/>
    </opticalsurface>
    <opticalsurface name="QuartzPhotonDetSurface" finish="polished" model="unified" type="dielectric_metal">
      <property name="REFLECTIVITY" coldim="2" values="0.4*eV 0 6.02*eV 0"/>
    </opticalsurface>
    <opticalsurface name="PhotonDetSurface" finish="polished" model="glisur" type="dielectric_metal">
      <property name="REFLECTIVITY" coldim="2" values="0.4*eV 0 6.02*eV 0"/>
    </opticalsurface>
    <opticalsurface name="CoatingSurface" finish="polished" model="glisur" type="dielectric_metal">
      <property name="REFLECTIVITY" coldim="2" values="0.4*eV 0 6.02*eV 0"/>
    </opticalsurface>
  </surfaces>

  <detectors>
    <comment> DIRC-like for STCF </comment>
    <detector name="StcfDirc" type="StcfDircGeoV1" vis="DircVis" material="Air" id="40">
      <Sector name="Sector" nSectors="12" radius1="500.*mm" radius2="1050.*mm" positionZ="1.3*m" thickness="200.*mm" material="Air" vis="DircVis"/>
      <Shield name="Shield" thickness="4.*mm" material="Al" vis="DircShieldVis"/>
      <Coating name="Coating" thickness="0.5*mm" material="Al" vis="DircCoatingVis"/>
      <Quartz name="quartz" radius="22.*mm" thickness="1.5*cm" width1="0.2533*m" width2="0.5123*m" height="0.4722*m" material="quartz" vis="DircQuartzVis"/>
      <PhotonDet name="PhotonDet" nPhotonDets="16" thickness="16.6*mm" width="27.5*mm" height="27.5*mm" gap="4.8*mm" material="PhotonDet" vis="DircPhotonDetVis"/>
      <Cathode name="cathode" nCathodes="4" thickness="1.0*mm" width="5.5*mm" height="22.0*mm" material="Cathode" vis="DircCathodeVis"/>
    </detector>
  </detectors>

